{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Policy content for pipeline_execution_schedule_policy type",
  "type": "object",
  "properties": {
    "content": {
      "description": "Specifies the content of custom configuration.",
      "type": "object",
      "properties": {
        "include": {
          "type": "array",
          "maxItems": 1,
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "project": {
                "type": "string"
              },
              "file": {
                "type": "string"
              },
              "ref": {
                "type": "string"
              }
            },
            "required": [
              "project",
              "file"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "include"
      ],
      "additionalProperties": false
    },
    "schedules": {
      "$ref": "./pipeline_execution_schedules.json"
    }
  },
  "additionalProperties": false
}
