- page_title s_('Trial|Start your free Ultimate and GitLab Duo Enterprise trial')

- content_for :page_specific_javascripts do
  = render 'layouts/google_tag_manager_head'
  = render 'layouts/one_trust'
= render 'layouts/google_tag_manager_body'

.gl-max-w-4xl.gl-mx-auto.gl-flex.gl-flex-col.md:gl-flex-row.gl-items-center.gl-justify-center.gl-gap-6.md:gl-gap-0
  .sm:gl-m-8.gl-max-w-80
    %h2.gl-mt-0.gl-text-center
      = title_text

    %p.gl-text-subtle.gl-text-lg.gl-text-center
      = trial_selection_intro_text

    = before_form_content

    = form_tag submit_path, method: :post, class: 'js-saas-trial-group gl-border-1 gl-border-solid gl-border-gray-100 gl-p-6', data: { testid: 'trial-form' } do
      .js-namespace-selector{ data: trial_namespace_selector_data }
      = render Pajamas::ButtonComponent.new(type: :submit, variant: :confirm,
        button_options: { class: 'gl-w-full', data: { testid: 'start-your-free-trial-button' }}) do
        = _('Activate my trial')

  = render GitlabSubscriptions::Trials::AdvantagesListComponent.new
