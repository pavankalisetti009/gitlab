- page_title text_page_title

.gl-grid.gl-grid-cols-1.gl-mt-7.gl-mx-auto.gl-gap-5{ class: 'gl-w-full @md/panel:gl-w-16/20 @md/panel:gl-grid-cols-2', data: { testid: 'hero-section' } }
  .gl-self-center
    .div{ class: 'dark:gl-hidden' }
      = image_tag(hero_logo, class: "gl-w-full")
    .div{ class: 'gl-hidden dark:gl-block' }
      = image_tag(hero_logo_dark, class: "gl-w-full")
    %h2.gl-text-size-h1.gl-mb-5
      = hero_header_text
    - if hero_tagline_text.present?
      %p.gl-mb-2{ data: { testid: 'hero-tagline-text' } }
        = hero_tagline_text
    .gl-flex.gl-gap-3.gl-flex-wrap.gl-flex-col{ class: "@sm/panel:gl-flex-row", data: { testid: 'discover-header-actions' } }
      - if buy_now_link.present?
        = render Pajamas::ButtonComponent.new(href: buy_now_link,
          category: :primary, variant: :confirm,
          button_options: { data: { testid: 'buy-now-top', track_action: 'click_buy_now', track_label: trial_status_cta_label } }) do
          = cta_button_text
      - if show_hand_raise_lead?
        .js-hand-raise-lead-trigger{ data: hand_raise_lead_data }
  = link_to hero_video, target: '_blank' do
    = image_tag(hero_thumbnail, class: 'gl-w-full gl-rounded-lg')

.gl-grid.gl-grid-cols-1.gl-mt-7.gl-mx-auto.gl-gap-5{ class: 'gl-w-full @md/panel:gl-w-16/20 @md/panel:gl-grid-cols-2', data: { testid: 'why-section' } }
  %h3.gl-heading-4.gl-mb-0.gl-grid{ class: "@md/panel:gl-col-start-1 @md/panel:gl-col-end-3" }
    = why_section_header_text
  = render Pajamas::CardComponent.with_collection(discover_card_collection,
    card_options: { class: 'gl-rounded-lg gl-p-2 gl-bg-default gl-border-default', data: { testid: 'why-entry' } },
    body_options: { class: 'gl-pt-0' },
    header_options: { class: 'gl-bg-default gl-py-4 gl-font-bold gl-border-b-0' })

.gl-grid.gl-grid-cols-1.gl-mt-7.gl-mx-auto.gl-gap-5{ class: 'gl-w-full @md/panel:gl-w-16/20 @md/panel:gl-grid-cols-2 @lg/panel:gl-grid-cols-4', data: { testid: 'core-feature-1' } }
  %h3.gl-heading-4.gl-mb-0.gl-grid{ class: "@md/panel:gl-col-start-1 @md/panel:gl-col-end-3 @lg/panel:gl-col-end-5" }
    = core_feature_one_header_text
  = render Pajamas::CardComponent.with_collection(core_section_one_card_collection,
    card_options: { class: 'gl-rounded-lg gl-p-2 gl-h-full gl-flex gl-flex-col gl-bg-default gl-border-default', data: { testid: 'core-1-entry' } },
    header_options: { class: 'gl-bg-default gl-py-4 gl-font-bold gl-border-b-0' },
    body_options: { class: 'gl-px-5 gl-py-4 gl-pt-0 gl-grow' },
    footer_options: { class: 'gl-bg-default gl-border-0 gl-px-5 gl-py-4 gl-mt-auto' })

- if core_section_two_card_collection.present?
  .gl-grid.gl-grid-cols-1.gl-mt-7.gl-mx-auto.gl-gap-5{ class: 'gl-w-full @md/panel:gl-w-16/20 @md/panel:gl-grid-cols-2 @lg/panel:gl-grid-cols-4', data: { testid: 'core-feature-2' } }
    - if core_feature_two_header_text.present?
      %h3.gl-heading-4.gl-mb-0.gl-grid{ class: "@md/panel:gl-col-start-1 @md/panel:gl-col-end-3 @lg/panel:gl-col-end-5" }
        = core_feature_two_header_text
    = render Pajamas::CardComponent.with_collection(core_section_two_card_collection,
      card_options: { class: 'gl-rounded-lg gl-p-2 gl-h-full gl-flex gl-flex-col gl-bg-default gl-border-default', data: { testid: 'core-2-entry' } },
      header_options: { class: 'gl-bg-default gl-py-4 gl-font-bold gl-border-b-0' },
      body_options: { class: 'gl-px-5 gl-py-4 gl-pt-0 gl-grow' },
      footer_options: { class: 'gl-bg-default gl-border-0 gl-px-5 gl-py-4 gl-mt-auto' })

.gl-mt-7.gl-mx-auto{ class: '@md/panel:gl-w-16/20', data: { testid: 'discover-footer-actions' } }
  - if buy_now_link.present?
    = render Pajamas::ButtonComponent.new(href: buy_now_link,
      category: :primary, variant: :confirm,
      button_options: { class: 'gl-w-full gl-mb-3 @sm/panel:gl-w-auto @sm/panel:gl-mr-3 @sm/panel:gl-mb-0',
      referrerpolicy: 'no-referrer-when-downgrade',
      data: { testid: 'buy-now-bottom', track_action: 'click_buy_now', track_label: trial_status_cta_label } }) do
      = cta_button_text
  - if show_hand_raise_lead?
    .js-hand-raise-lead-trigger{ data: hand_raise_lead_data }
