- return unless can?(current_user, :admin_compliance_framework, @group)

= render Users::GroupDismissibleAlertComponent.new(title: _('Compliance framework settings have moved.'),
    alert_options: { class: 'gl-my-5', data: { defer_links: 'true' }},
    wrapper_options: { tag: :section, class: 'settings expanded' },
    dismiss_options: { user: current_user,
                       group: @group,
                       feature_id: ::EE::Users::GroupCalloutsHelper::COMPLIANCE_FRAMEWORK_SETTINGS_MOVED_CALLOUT }) do |c|
  - c.with_body do
    = _('On the left sidebar, select %{compliance_center_link} to view them.').html_safe % { compliance_center_link: link_to('Secure > Compliance Center', group_security_compliance_dashboard_path(@group, vueroute: 'frameworks')).html_safe }
