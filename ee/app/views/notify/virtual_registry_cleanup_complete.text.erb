<%= s_('VirtualRegistry|Hi %{username}!') % { username: sanitize_name(@user.name) } %>

<%= s_('VirtualRegistry|The cache cleanup policy has completed successfully for %{group_link}.') % { group_link: "#{@group.name} #{group_url(@group)}" } %>

<%= s_('VirtualRegistry|Summary of the cleanup') %>

* <%= s_('VirtualRegistry|Total entries removed:') %> <%= @policy.last_run_deleted_entries_count %>
* <%= s_('VirtualRegistry|Storage reclaimed:') %> <%= ActiveSupport::NumberHelper.number_to_human_size(@policy.last_run_deleted_size, separator: ',') %>
* <%= s_('VirtualRegistry|Rule:') %> <%= s_('VirtualRegistry|Not accessed in the last %{days} days') % { days: @policy.keep_n_days_after_download } %>

<%= s_('VirtualRegistry|You can review the full cleanup details in the %{audit_events_link}.') % { audit_events_link: "#{s_('VirtualRegistry|audit log')} #{group_audit_events_url(@group)}" } %>
