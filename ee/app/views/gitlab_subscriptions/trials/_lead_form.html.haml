- page_title s_('Trial|Start your free Ultimate and GitLab Duo Enterprise trial')

- content_for :page_specific_javascripts do
  = render 'layouts/google_tag_manager_head'
  = render 'layouts/one_trust'
= render 'layouts/google_tag_manager_body'

.row.gl-items-center
  .col-md-6.m-sm-6
    %h2.gl-mt-0
      - if @group_name.present?
        = safe_format(s_('Trial|Start your free Ultimate and GitLab Duo Enterprise trial on %{group_name}'), group_name: @group_name)
      - else
        = s_('Trial|Start your free Ultimate and GitLab Duo Enterprise trial')

    %p.gl-text-gray-700.gl-text-lg
      = s_('Trial|Your combined Ultimate and GitLab Duo Enterprise trial lasts for 60 days. We just need some additional information to activate it.')

    = yield :before_form

    #js-trial-create-lead-form{ data: create_lead_form_data(@eligible_namespaces) }

  .col-md-4.trial-illustration
    = image_tag 'illustrations/saas-trial-illustration.svg', alt: '', class: 'gl-hidden md:gl-inline gl-w-full'
