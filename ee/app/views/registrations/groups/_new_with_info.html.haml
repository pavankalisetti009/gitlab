.row.gl-grow
  .gl-flex.gl-flex-col.gl-items-center.gl-w-full.gl-px-5.gl-pb-5
    .gl-flex.gl-flex-col.gl-items-center.gl-w-full{ class: "@sm/panel:gl-w-full" }
      %h2.gl-text-center.gl-mb-9= _("Let's create your first group and project")

      .gl-grid.gl-grid-cols-1.gl-gap-5{ class: '@lg/panel:gl-grid-cols-2', style: 'max-width: 940px;' }
        .js-toggle-container
          = gl_tabs_nav({ class: 'nav-links gitlab-tabs js-group-project-tabs' }) do
            = gl_tab_link_to '#blank-project-pane', { item_active: true, id: 'blank-project-tab', class: 'focus-visible:!gl-focus-inset !gl-rounded-none', 'aria-selected': 'true', data: { track_action: 'click_tab', track_label: 'blank_project' } } do
              %span= s_('ProjectsNew|Create')
            = gl_tab_link_to '#import-project-pane', { item_active: false, id: 'import-project-tab', class: 'focus-visible:!gl-focus-inset !gl-rounded-none', 'aria-selected': 'false', data: { track_action: 'click_tab', track_label: 'import_project' } } do
              %span= s_('ProjectsNew|Import')

          .tab-content.gitlab-tab-content.gl-bg-default.js-group-project-tab-contents
            #blank-project-pane.tab-pane.js-toggle-container.active{ role: 'tabpanel' }
              = gitlab_ui_form_for :project_group,
                url: users_sign_up_groups_path,
                html: { class: 'gl-show-field-errors gl-w-full gl-p-4 js-groups-projects-form' } do |f|
                = form_errors(@group, type: "Group")
                = form_errors(@project, type: "Project")
                = render 'layouts/flash'

                .js-create-import-group-project-fields{ data: { group_persisted: @group.persisted?.to_s,
                  group_id: @group.id,
                  group_name: @group.name,
                  project_name: @project.name,
                  template_name: @template_name,
                  initialize_with_readme: @initialize_with_readme.to_s,
                  root_url: root_url,
                  track_action_for_errors: tracking_label } }

                = render Pajamas::ButtonComponent.new(type: :submit, variant: :confirm, block: true, button_options: { data: { testid: 'submit-button' }}) do
                  = _("Create project")

            #import-project-pane.tab-pane.import-project-pane.js-toggle-container{ role: 'tabpanel' }
              - if import_sources_enabled?
                = form_tag users_sign_up_groups_path,
                  class: 'gl-show-field-errors gl-w-full gl-p-4 js-import-project-form' do
                  = form_errors(@group, type: "Group")
                  = render 'layouts/flash'

                  .js-create-import-group-project-fields{ data: { import_group: 'true',
                    group_persisted: @group.persisted?.to_s,
                    group_id: @group.id,
                    group_name: @group.name,
                    root_url: root_url,
                    track_action_for_errors: tracking_label } }

                  = hidden_field_tag :import_url, nil, class: 'js-import-url'
                  = submit_tag nil, class: 'gl-hidden'

                .js-import-project-buttons
                  = render 'import_project_pane', destination_namespace_id: @group&.id
              - else
                .nothing-here-block
                  %h4= s_('ProjectsNew|No import options available')
                  %p= s_('ProjectsNew|Contact an administrator to enable options for importing your project.')

        .gl-mt-5{ class: '@lg/panel:gl-ml-7 @lg/panel:gl-mt-0' }
          %p.gl-font-bold= s_('ProjectsNew|Understanding groups and projects')
          %p.gl-mb-6= s_('ProjectsNew|One group can contain multiple projects, for example:')

          .gl-ml-5.gl-relative.gl-mb-6
            .gl-flex.gl-items-center.gl-gap-2
              = sprite_icon('group')
              %span= s_('ProjectsNew|Mobile apps - ')
              %span.gl-font-bold.gl-italic= s_('Group')
            .gl-flex.gl-mt-2
              .gl-relative.gl-w-6
                .gl-absolute.gl-left-2.gl-top-2.gl-bottom-3.gl-bg-gray-200{ style: 'width:2px; margin-left:-1px;' }
                .gl-absolute.gl-bottom-3.gl-left-2.gl-w-4.gl-bg-gray-200{ style: 'height:2px;' }

              .gl-flex.gl-flex-col.gl-gap-2
                .gl-flex.gl-items-center.gl-gap-2
                  = sprite_icon('project')
                  %span= s_('ProjectsNew|ui-frontend - ')
                  %span.gl-font-bold.gl-italic= s_('Project')

                .gl-flex.gl-items-center.gl-gap-2
                  = sprite_icon('project')
                  %span= s_('ProjectsNew|api-backend - ')
                  %span.gl-font-bold.gl-italic= s_('Project')

                .gl-flex.gl-items-center.gl-gap-2
                  = sprite_icon('project')
                  %span= s_('ProjectsNew|mobile-ios - ')
                  %span.gl-font-bold.gl-italic= s_('Project')

          - groups_and_projects_link_url = 'https://docs.gitlab.com/tutorials/manage_user/'
          - groups_and_projects_link = link_to('', groups_and_projects_link_url, target: '_blank', rel: 'noopener noreferrer')
          %p= safe_format(s_('ProjectsNew|Learn more about %{groups_and_projects_link_start}setting up your organization%{groups_and_projects_link_end} with groups and projects.'), tag_pair(groups_and_projects_link, :groups_and_projects_link_start, :groups_and_projects_link_end))
