- page_title s_('IdentityVerification|Help us keep GitLab secure')
- add_page_specific_style 'page_bundles/zuora'
- if onboarding_status_presenter.new_registration_design?
  - experiment(:lightweight_trial_registration_redesign, actor: @user) do |e|
    - e.candidate do
      - content_for :hide_empty_navbar, true
      - @html_class = 'gl-dark'

.gl-mb-6
  = render_if_exists 'devise/shared/delete_unconfirmed_users_flash'

%div{ data: { track_action: 'render', track_label: onboarding_status_presenter.tracking_label } }
  #js-identity-verification{ data: signup_identity_verification_data(@user) }
