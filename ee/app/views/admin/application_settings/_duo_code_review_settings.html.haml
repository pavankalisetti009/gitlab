- return unless @application_setting.auto_duo_code_review_settings_available?

= render ::Layouts::SettingsBlockComponent.new(s_('DuoCodeReview|GitLab Duo Code Review'),
  id: 'js-duo-code-review-settings',
  expanded: expanded_by_default?) do |c|
  - c.with_description do
    = s_('DuoCodeReview|Control whether GitLab Duo automatically reviews merge requests across all groups and projects. This setting cascades to subgroups and projects but can be overridden.')
  - c.with_body do
    = gitlab_ui_form_for @application_setting, url: general_admin_application_settings_path(anchor: 'js-duo-code-review-settings'), html: { class: 'fieldset-form', id: 'duo-code-review-settings' } do |f|
      = form_errors(@application_setting)
      .form-group.gl-mb-3
        = f.gitlab_ui_checkbox_component :auto_duo_code_review_enabled,
          s_('DuoCodeReview|Enable automatic reviews by GitLab Duo'),
          help_text: s_('DuoCodeReview|When enabled, GitLab Duo will automatically review new merge requests across all groups and projects. Draft merge requests and merge requests without changes are skipped.')
      = f.submit _('Save changes'), pajamas_button: true, data: { testid: 'save_duo_code_review_changes' }
