<%= _("Hello Admin,") %>

<%= _("GitLab user %{username} flagged the AI Catalog item %{item_name} for review.") % { username: @reporter.username, item_name: @ai_catalog_item.name } %>

- <%= _("Catalog item: %{name} (ID: %{id})") % { name: @ai_catalog_item.name, id: @ai_catalog_item.id } %>
- <%= _("Reported by: %{username} at %{time}") % { username: @reporter.username, time: @reported_at.strftime('%Y-%m-%d %H:%M:%S %Z') } %>
- <%= _("Reason:") %>
<% if @reason.present? %>
  - <%= @reason %>
<% end %>
<% if @message.present? %>
  - <%= @message %>
<% end %>

<%= _("If everything looks okay, you can ignore this message.") %>

<%= _("You can use our GraphQL API to remove an item:") %>

- <%= _("Recommended. Permanently delete an item:") %>

  mutation ai_catalog_item_delete {
    <%= mutation_name %>(input: {
      id: "<%= @ai_catalog_item.to_global_id %>",
      forceHardDelete: true
    }) {
      errors
      success
    }
  }

- <%= _("Hide an item from the AI Catalog. The item is not deleted and can still be used:") %>

  mutation ai_catalog_item_delete {
    <%= mutation_name %>(input: {
      id: "<%= @ai_catalog_item.to_global_id %>"
    }) {
      errors
      success
    }
  }

<%= _("This is an automated message. Please don't reply to this message.") %>

