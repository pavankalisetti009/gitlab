{
  "extends": "@frontend-islands/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue"
  ],
  "exclude": [
    "./src/**/*_spec.ts",
    "./src/**/*.spec.ts"
  ]
}
